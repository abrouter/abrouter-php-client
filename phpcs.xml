<?xml version="1.0"?>

<ruleset name="ABRouter">
    <description>ABRouter Coding Standards</description>

    <!-- Use PSR-2 as a base -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Formatting.NoSpaceAfterCast"/>

    <!-- We can extend it for everything we need -->
    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>./vendor/*</exclude-pattern>
</ruleset>
